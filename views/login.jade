extends ./layout.jade
block contenido
	div(class="col-md-8 remove-float center-block big-top-space")
		form(action="/sessions",method="POST")
			div.form-group
				label(for="email") Email
				input(type="text",name="email",placeholder="Email",id="email",class="form-control")
			div.div-group
				label(for="password") Contraseña
				input(type="password",name="password",placeholder="Contraseña",id="password",class="form-control")
			div(class="row top-space")
					div(class="col-xs-12 col-sm-6")
						input.btn.btn-info(type="submit",value="Iniciar sesion")
					div(class="col-xs-12 col-sm-6 text-right")
						a(href="/signup") No tengo cuenta