extends ../../layout.jade
block contenido
	div(class="col-md-8 remove-float center-block big-top-space")
		h1 Editar Imagen
		form(action="/app/imagenes/#{imagen.id}?_method=PUT",method="post")
			input(type="hidden" value="PUT",name="_method")
			div.form-group
				label(for="title") Titulo
				input(type="text",name="title",class="form-control",id="title",value="#{imagen.title}")
			div(class="row top-space")
					div(class="col-xs-12 col-sm-6")
						input.btn.btn-info(type="submit",value="Guardar")